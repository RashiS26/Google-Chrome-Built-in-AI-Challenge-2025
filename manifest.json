{
  "manifest_version": 3,
  "name": "Price Tracker Pro+",
  "version": "1.0.0",
  "description": "Track prices across sites and get alerts when they drop below your limit.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.amazon.in/*",
    "https://*.amazon.com/*",
    "https://www.flipkart.com/*",
    "https://*.flipkart.com/*",
    "https://*.ebay.com/*",
    "https://*.myntra.com/*",
    "https://*.snapdeal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.in/*",
        "https://*.amazon.com/*",
        "https://www.flipkart.com/*",
        "https://*.flipkart.com/*",
        "https://*.ebay.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}